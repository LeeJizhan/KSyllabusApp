<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <com.daijie.ksyllabusapp.widgets.scroll_choice.ScrollChoice
        android:foreground="@drawable/bg_dev_right"
        android:id="@+id/dateScrollChoice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:scroll_atmospheric="false"
        android:layout_weight="1"
        app:scroll_background_color="@color/material_white"
        app:scroll_item_align="center"
        app:scroll_item_text_color="@color/colorTextDisable"
        app:scroll_item_text_size="14sp"
        app:scroll_selected_item_background="@color/colorChoice"
        app:scroll_selected_item_text_color="@color/colorTextPrimary"/>



    <com.daijie.ksyllabusapp.widgets.scroll_choice.ScrollChoice
        android:foreground="@drawable/bg_dev_right"
        android:id="@+id/startTimeScrollChoice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:scroll_atmospheric="false"
        app:scroll_background_color="@color/material_white"
        app:scroll_item_align="center"
        app:scroll_item_text_color="@color/colorTextDisable"
        app:scroll_item_text_size="14sp"
        app:scroll_selected_item_background="@color/colorChoice"
        app:scroll_selected_item_text_color="@color/colorTextPrimary"/>


    <com.daijie.ksyllabusapp.widgets.scroll_choice.ScrollChoice
        android:id="@+id/endTimeScrollChoice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:scroll_atmospheric="false"
        app:scroll_background_color="@color/material_white"
        app:scroll_item_align="center"
        app:scroll_item_text_color="@color/colorTextDisable"
        app:scroll_item_text_size="14sp"
        app:scroll_selected_item_background="@color/colorChoice"
        app:scroll_selected_item_text_color="@color/colorTextPrimary"/>



</LinearLayout>