<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shareItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/objectIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        tools:text="分享码: fasjdfa"/>

    <TextView
        android:id="@+id/lessonNumTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/objectIdTextView"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorTextSecondly"
        android:textSize="16sp"
        tools:text="分享码: fasjdfa"/>


    <Button
        android:id="@+id/copyButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/lessonNumTextView"
        android:layout_toLeftOf="@+id/deleteButton"
        android:text="复制分享码"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/deleteButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lessonNumTextView"
        android:text="删除"
        android:textColor="@color/material_red_400"/>


</RelativeLayout>